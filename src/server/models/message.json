{
  "name": "Message",
  "base": "PersistedModel",
  "idInjection": true,
  "indexes": {
    "MESSAGE_OWNER_ID_IDX": {
      "columns": "creatorId"
    },
    "MESSAGE_RECEIVER_ID_IDX": {
      "columns": "receiverId"
    }
  },
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "length": 128,
      "required": true
    },
    "message": {
      "type": "string",
      "length": 4096
    },
    "receiverId": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "creatorId": {
      "type": "number",
      "required": true
    },
    "created": {
      "type": "date",
      "required": true,
      "default": "now"
    },
    "isRead": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "isGroupMessage": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "receiver": {
      "type": "belongsTo",
      "model": "Member",
      "foreignKey": "receiverId"
    },
    "creator": {
      "type": "belongsTo",
      "model": "Member",
      "foreignKey": "creatorId"
    }
  },
  "acls": [],
  "methods": {}
}
